# ===========================================================================
# A.I.M.S. Frontend Environment
# Copy this file to .env.local and fill in the values
# ===========================================================================

# ---------------------------------------------------------------------------
# Database — Prisma SQLite (VPS) or Vercel Postgres (Vercel)
# ---------------------------------------------------------------------------
DATABASE_URL="file:./dev.db"

# ACP Proxy — the frontend API route endpoint
NEXT_PUBLIC_ACP_ENDPOINT=http://localhost:3000/api/acp

# UEF Gateway — used by ALL API routes server-side
# On Vercel, point to production VPS: https://plugmein.cloud/api
# UEF_GATEWAY_URL is the canonical name (most routes use it).
# UEF_ENDPOINT is the legacy alias (still checked as fallback).
UEF_GATEWAY_URL=http://localhost:3001
UEF_ENDPOINT=http://localhost:3001

# ---------------------------------------------------------------------------
# Vercel + AI SDK — Chat SDK, Agents, streaming
# These are only needed on Vercel (ignored by VPS Docker deploy)
# ---------------------------------------------------------------------------
# NEXT_PUBLIC_VERCEL_URL is auto-set by Vercel
# OPENAI_API_KEY=           # For @ai-sdk/openai provider
# ANTHROPIC_API_KEY=        # For @ai-sdk/anthropic provider
# GOOGLE_GENERATIVE_AI_API_KEY=  # For @ai-sdk/google provider

# Internal API key — must match backend INTERNAL_API_KEY
# Generate with: openssl rand -hex 32
INTERNAL_API_KEY=

# ---------------------------------------------------------------------------
# NextAuth.js — Authentication
# ---------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-to-a-random-secret

# Owner emails — comma-separated, these get super admin access
OWNER_EMAILS=

# Google OAuth (get from console.cloud.google.com)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ---------------------------------------------------------------------------
# Stripe — Payments & Subscriptions
# 3-6-9 Commitment Model: P2P | 3mo | 6mo | 9mo (pay 9, get 12)
# Create products/prices in Stripe Dashboard, paste price IDs here.
# ---------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# 3-6-9 commitment tiers (primary pricing model)
STRIPE_PRICE_P2P=
STRIPE_PRICE_3MO=
STRIPE_PRICE_6MO=
STRIPE_PRICE_9MO=

# Legacy 5-tier plan prices (subscription/route.ts compatibility)
STRIPE_PRICE_COFFEE_MONTHLY=
STRIPE_PRICE_DATA_ENTRY_MONTHLY=
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_ENTERPRISE_MONTHLY=

# Lifetime deals
STRIPE_PRICE_LTD_BYOK=
STRIPE_PRICE_LTD_PLATFORM=
STRIPE_PRICE_LTD_WHITELABEL=

# ---------------------------------------------------------------------------
# OpenRouter — LLM Gateway (Claude, GPT-4, Gemini, etc.)
# ---------------------------------------------------------------------------
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ---------------------------------------------------------------------------
# ElevenLabs — Voice Agent & TTS (Primary TTS)
# ---------------------------------------------------------------------------
NEXT_PUBLIC_ELEVENLABS_AGENT_ID=
ELEVENLABS_API_KEY=

# ---------------------------------------------------------------------------
# Deepgram — TTS (Aura-2 fallback) + STT (Nova-3 fallback)
# Get key from: https://console.deepgram.com
# ---------------------------------------------------------------------------
DEEPGRAM_API_KEY=

# ---------------------------------------------------------------------------
# Groq — STT (Whisper inference, primary transcription)
# Get key from: https://console.groq.com
# ---------------------------------------------------------------------------
GROQ_API_KEY=

# ---------------------------------------------------------------------------
# Brave Search — Web search for Make It Mine + Research
# Get key from: https://brave.com/search/api/
# ---------------------------------------------------------------------------
BRAVE_API_KEY=

# ---------------------------------------------------------------------------
# CollegeFootballData.com — Historical CFB data (free tier: 1,000 calls/mo)
# Register free at: https://collegefootballdata.com/key
# ---------------------------------------------------------------------------
CFBD_API_KEY=

# ---------------------------------------------------------------------------
# Telegram — Bot entry point for ACHEEVY
# Create bot via @BotFather on Telegram, get token
# Register webhook: POST https://api.telegram.org/bot<TOKEN>/setWebhook?url=https://plugmein.cloud/api/telegram/webhook
# ---------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=
