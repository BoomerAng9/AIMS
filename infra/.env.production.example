# =============================================================================
# A.I.M.S. Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in all values before deploying.
#
#   cp .env.production.example .env.production
#
# WARNING: Never commit .env.production to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Domain & Application
# -----------------------------------------------------------------------------
NEXTAUTH_URL=https://yourdomain.com
CORS_ORIGIN=https://yourdomain.com
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Internal API key — shared secret between frontend and backend.
# Generate with: openssl rand -hex 32
INTERNAL_API_KEY=generate-a-random-api-key

# -----------------------------------------------------------------------------
# NextAuth (Authentication)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=generate-a-random-secret

# Comma-separated emails that get OWNER role (super admin access)
OWNER_EMAILS=your@email.com

# -----------------------------------------------------------------------------
# Google OAuth
# -----------------------------------------------------------------------------
# Set up at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Stripe (Payments — 3-6-9 Model + LTD)
# -----------------------------------------------------------------------------
# Set up at https://dashboard.stripe.com
# Create products/prices for each tier, then paste the price IDs below.
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# 3-6-9 Commitment Tiers — create recurring prices in Stripe Dashboard
STRIPE_PRICE_P2P=
STRIPE_PRICE_3MO=
STRIPE_PRICE_6MO=
STRIPE_PRICE_9MO=

# Legacy 5-Tier Names (optional — for migration compatibility)
STRIPE_PRICE_COFFEE_MONTHLY=
STRIPE_PRICE_DATA_ENTRY_MONTHLY=
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_ENTERPRISE_MONTHLY=

# Lifetime Deal (LTD) Tiers — one-time payment prices
STRIPE_PRICE_LTD_BYOK=
STRIPE_PRICE_LTD_PLATFORM=
STRIPE_PRICE_LTD_WHITELABEL=

# PayPal (alternative payment method)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Core AI/LLM APIs
# -----------------------------------------------------------------------------
# OpenRouter — powers all Boomer_Ang agents via 200+ models
# Get key at https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Grok (xAI) — optional alternative LLM
GROK_API_KEY=

# Hugging Face — Nvidia models, model hub access
# Get token at https://huggingface.co/settings/tokens
HF_TOKEN=

# Kimi K2.5 — Moonshot AI 1T visual agentic model
# Primary: https://api.together.xyz  |  Fallback: https://fireworks.ai
TOGETHER_API_KEY=
FIREWORKS_API_KEY=

# AI CLIs — VPS Automation (Claude Code + Gemini)
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# MCP Integration Suite
# -----------------------------------------------------------------------------
# Composio — Unified API for 15+ services (GitHub, Stripe, Notion, etc.)
COMPOSIO_API_KEY=

# E2B — Code sandbox verification
E2B_API_KEY=

# Firecrawl — Web scraping & crawling
FIRECRAWL_API_KEY=

# CodeSandbox — Browser-based code editing & preview
CODESANDBOX_API_KEY=

# -----------------------------------------------------------------------------
# Search & Data APIs
# -----------------------------------------------------------------------------
# Brave Search — primary web search
BRAVE_API_KEY=

# Serper — fast Google Search API
SERPER_API_KEY=

# Apify — 500+ pre-built web scrapers
APIFY_API_KEY=

# Tavily — AI-optimized search
TAVILY_API_KEY=

# -----------------------------------------------------------------------------
# Voice & Speech APIs
# -----------------------------------------------------------------------------
# ElevenLabs — Primary STT (Scribe v2) + TTS (eleven_turbo_v2_5)
ELEVENLABS_API_KEY=

# Deepgram — Fallback STT (nova-3) + fallback TTS (aura-2)
DEEPGRAM_API_KEY=

# Nvidia PersonaPlex — Voice Agent (avatar + engagement)
# Backed by NVIDIA Nemotron-3-Nano-30B-A3B on GCP Cloud Run w/ GPU.
# MoE architecture: 30B total params, only 3B active per token = fast inference.
# License: NVIDIA Nemotron Open Model License (commercial use OK).
# Set PERSONAPLEX_ENDPOINT to your Cloud Run service URL once deployed.
PERSONAPLEX_ENDPOINT=
PERSONAPLEX_API_KEY=
PERSONAPLEX_AVATAR_ID=

# Qwen3-TTS — self-hosted fallback (optional)
QWEN3_TTS_URL=

# -----------------------------------------------------------------------------
# Video AI APIs
# -----------------------------------------------------------------------------
# Twelve Labs — Video understanding, search & indexing (Film Room / Per|Form)
# Get key at https://api.twelvelabs.io
TWELVELABS_API_KEY=

# -----------------------------------------------------------------------------
# Communication APIs
# -----------------------------------------------------------------------------
# Resend — Email API
RESEND_API_KEY=

# Telegram Bot
TELEGRAM_BOT_TOKEN=

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=change-this-to-a-strong-password

# -----------------------------------------------------------------------------
# n8n — Workflow Automation
# -----------------------------------------------------------------------------
N8N_AUTH_USER=aims
N8N_AUTH_PASSWORD=
N8N_WEBHOOK_URL=http://n8n:5678

# -----------------------------------------------------------------------------
# Cloudflare (DNS, R2, Workers)
# -----------------------------------------------------------------------------
# API token with Zone:Edit, DNS:Edit, R2:Write permissions
# Create at https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_ZONE_IDS=

# R2 object storage for exports, artifacts, plug bundles
CLOUDFLARE_R2_BUCKET=aims-exports

# Workers — edge compute for agent routing & R2 signed URLs
# These are set after deploying Workers via `cd infra/workers && npx wrangler deploy`
CLOUDFLARE_R2_SIGNER_URL=
CLOUDFLARE_AGENT_GATEWAY_URL=

# -----------------------------------------------------------------------------
# Agent Zero / AVVA NOON
# -----------------------------------------------------------------------------
ENABLE_AGENT_ZERO=true
